<h1><%= @place["name"] %></h1>
<br>
<h2>My Posts</h2>
<br>

<div class="row">

  <% for post in @posts %>
      <div class="col-md-3 col-sm-6">
        <h4>
          <h3><%= post["title"] %></h3>
          <h4><%= post["posted_on"] %></h4>
          <p><%= post["description"] %></p>
        </h4>

        </div>
  <% end %>

</div>

<p>
  <a class="btn btn-primary" href="/posts/new?place_id=<%= @place["id"] %>" role="button">New Post</a>
</p>
<br>
<p>
  <a class="btn btn-secondary" href="places" role="button">Back to All Places</a>
</p>